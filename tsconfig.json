{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "strictNullChecks": false,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@actions/*": [
        "src/store/actions/*"
      ],
      "@selectors/*": [
        "src/store/selectors/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ]
    }
  }
}